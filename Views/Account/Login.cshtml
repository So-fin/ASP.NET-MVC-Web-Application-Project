@model MVCWebApp.Models.Members

<style>
    .Bg {
        background: rgba(255,255,255,0.4);
        border: none;
        display: block;
        outline: none;
        width: 400px;
        height: 30px;
        top: 250px;
        margin: 2px auto;
        padding: 15px;
        color: #333;
        -webkit-box-shadow: 0 2px 5px 1px rgba(0,0,0,0.5);
        box-shadow: 0 2px 10px 1px rgba(0,0,0,0.5);
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: none;
    }

    .button {
        display: inline-block;
        padding: 0.5em 1em;
        text-decoration: none;
        border-radius: 4px;
        color: #ffffff;
        background-image: -webkit-linear-gradient(45deg, #FFC107 0%, #ff8b5f 100%);
        background-image: linear-gradient(45deg, #FFC107 0%, #ff8b5f 100%);
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.29);
        border-bottom: solid 3px #c58668;
    }

        .button:active {
            -ms-transform: translateY(4px);
            -webkit-transform: translateY(4px);
            transform: translateY(4px);
            box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);
            border-bottom: none;
        }
</style>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Login</th>
        </tr>
        <tr>
            <td>UserName:</td>
            <td>
                @Html.TextBoxFor(m => m.Username, new { Class = "Bg" })
            </td>
        </tr>
        <tr>
            <td>Password: </td>
            <td>
                @Html.TextBoxFor(m => m.Password, new { Class = "Bg" })
            </td>
        </tr>
        <tr>
            <td>
                <input id="save" type="submit" value="submit" class="button" />
            </td>
        </tr>
    </table>
}

